<p style="color: green"><%= notice %></p>

<h1>Class Forum</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Replies</th>
    </tr>
  </thead>
  

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %>
        </td>
        <%@user = User.where(userid: post.authorid).take%>
        <td><%= @user.name_with_lastname %>
        </td>
        <td><%= post.replies %>
        </td>


        <td><%= link_to 'Show', post %>
        </td>
        <!--<% if Current.user.userid == post.authorid %>
          <td><%= link_to 'Delete', { controller: "posts", action: "destroy", id: post.id }, method: :delete, data: { confirm: 'Are you sure?'} %>
          </td>
        <% end %>-->
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to "New post", postnew_path(@classidnumber) %>
